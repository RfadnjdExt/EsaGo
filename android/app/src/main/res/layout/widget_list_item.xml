<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <!-- Baris Pertama: Nama Mata Kuliah -->
    <TextView
        android:id="@+id/widget_item_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0775ba"
        android:textStyle="bold"
        android:textSize="15sp"
        tools:text="Pemrograman Perangkat Bergerak Lanjut"
        android:shadowColor="#B3FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <!-- Ikon dan Teks Waktu -->
        <ImageView
            android:id="@+id/widget_item_time_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_time"
            android:tint="#0775ba"
            android:alpha="0.8" />

        <TextView
            android:id="@+id/widget_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0775ba"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:alpha="0.9"
            tools:text="08:00 - 09:40"
            android:shadowColor="#B3FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <!-- Ikon dan Teks Ruangan -->
        <ImageView
            android:id="@+id/widget_item_room_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_location"
            android:tint="#0775ba"
            android:layout_marginStart="10dp"
            android:alpha="0.8" />

        <TextView
            android:id="@+id/widget_item_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0775ba"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:alpha="0.9"
            tools:text="CS305"
            android:shadowColor="#B3FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <!-- Jenis Jadwal (Kuliah/Ujian) -->
        <TextView
            android:id="@+id/widget_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingEnd="4dp" 
            android:textColor="#0775ba"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:alpha="0.8"
            tools:text="(Ujian) UTS"
            android:shadowColor="#B3FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

</LinearLayout>
